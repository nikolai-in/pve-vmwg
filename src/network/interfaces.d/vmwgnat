#version:11
# shellcheck disable=SC2148

auto vnet0
iface vnet0
        address 10.10.0.1/24
        post-up iptables -t nat -A POSTROUTING -s '10.10.0.0/24' -o vmbr0 -j SNAT --to-source 192.168.86.51
        post-down iptables -t nat -D POSTROUTING -s '10.10.0.0/24' -o vmbr0 -j SNAT --to-source 192.168.86.51
        post-up iptables -t raw -I PREROUTING -i fwbr+ -j CT --zone 1
        post-down iptables -t raw -D PREROUTING -i fwbr+ -j CT --zone 1
        bridge_ports none
        bridge_stp off
        bridge_fd 0
        ip-forward on
